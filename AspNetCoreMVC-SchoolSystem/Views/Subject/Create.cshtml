@using AspNetCoreMVC_SchoolSystem.DTO
@model SubjectDTO

<div class="container mt-5">
    <h1 class="mb-4">Vytvořit předmět</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label">Pojmenování</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="d-flex gap-2">
            <input class="btn btn-success" type="submit" value="Vytvořit" />
            <a asp-action="Index" class="btn btn-secondary">← Zpět</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
