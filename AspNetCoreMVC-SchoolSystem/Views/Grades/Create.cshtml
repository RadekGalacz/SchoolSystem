@model GradeDTO

<div class="container mt-5">
    <h1 class="mb-4">Vytvořit nové hodnocení</h1>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="StudentId" class="form-label"></label>
            <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
        </div>
        <div class="mb-3">
            <label asp-for="SubjectId" class="form-label"></label>
            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"></select>
        </div>
        <div class="mb-3">
            <label asp-for="Topic" class="form-label"></label>
            <input asp-for="Topic" type="text" placeholder="Zkoušená látka" class="form-control" />
        </div>
        <div class="mb-4">
            <label asp-for="Mark" class="form-label"></label>
            <input asp-for="Mark" type="number" min="1" max="5" placeholder="Číselné hodnocení" class="form-control" />
        </div>

        <div class="d-flex gap-2">
            <input class="btn btn-success" type="submit" value="Vytvořit" />
            <a asp-action="Index" class="btn btn-secondary">← Zpět</a>
        </div>
    </form>
</div>
