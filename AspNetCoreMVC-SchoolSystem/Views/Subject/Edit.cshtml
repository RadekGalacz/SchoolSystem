@model SubjectDTO
<style>
    .form-card {
        background-color: #ffffff;
        border-radius: 0.5rem;
        padding: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
    }

    .form-title {
        background: linear-gradient(90deg, #1e3c72, #2a5298);
        color: white;
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
<div class="container mt-5">
    <div class="form-card">
        <div class="form-title">Editovat předmět</div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name">Pojmenování předmětu</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">💾 Aktualizovat</button>
            <a asp-action="Index" class="btn btn-secondary btn-back">← Zpět</a>
        </form>
    </div>
</div>
