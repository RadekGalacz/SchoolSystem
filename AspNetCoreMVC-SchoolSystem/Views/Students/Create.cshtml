@using AspNetCoreMVC_SchoolSystem.DTO
@model StudentDTO
<h1>Vytvořit studenta</h1>
<form asp-action="Create" method="post">
	<div class="form-group mb-3">
		<label asp-for="FirstName"></label>
		<input type="text" asp-for="FirstName" class="form-control" />
	</div>
	<div class="form-group mb-3">
		<label asp-for="LastName"></label>
		<input type="text" asp-for="LastName" class="form-control" />
	</div>
	<div class="form-group mb-4">
		<label asp-for="DateOfBirth"></label>
		<input type="date" asp-for="DateOfBirth" class="form-control" />
	</div>

	<div class="d-flex gap-2">
		<input class="btn btn-success" type="submit" value="Vytvořit" />
		<a asp-action="Index" class="btn btn-secondary">← Zpět</a>
	</div>
</form>
